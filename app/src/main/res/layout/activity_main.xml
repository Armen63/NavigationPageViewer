<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.navigationpageviewer.MainActivity">

    <FrameLayout
        android:id="@+id/activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout"
        android:animateLayoutChanges="true">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#000000">

        <TextView
            android:id="@+id/activity_main_home_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/bottomTextColor"
            android:drawableTop="@drawable/ic_home_white_24dp"
            android:text="@string/home" />

        <TextView
            android:id="@+id/activity_main_collection_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/collection"
            android:drawableTop="@drawable/ic_collections_white_24dp"
            android:textColor="@color/bottomTextColor"
             />

        <TextView
            android:id="@+id/activity_main_communities_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/communities"
            android:drawableTop="@drawable/ic_group_work_white_24dp"
            android:textColor="@color/bottomTextColor"
            />

        <TextView
            android:id="@+id/activity_main_notification_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="Notifications"
            android:drawableTop="@drawable/ic_notifications_white_24dp"
            android:textColor="@color/bottomTextColor"
            />
    </LinearLayout>

</RelativeLayout>